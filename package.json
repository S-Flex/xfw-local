{
  "name": "xfw-local",
  "version": "0.0.1",
  "description": "allows xfw-portal to perform local actions",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "build-macos-universal": "npx electron-forge make --platform darwin --arch x64,arm64",
    "build-macos-x64": "npx electron-forge make --platform darwin --arch x64",
    "build-macos-arm": "npx electron-forge make --platform darwin --arch arm64",
    "build-windows": "npx electron-forge make --platform win32 --arch x64",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/S-Flex/xfw-local.git"
  },
  "author": "S-Flex",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/S-Flex/xfw-local/issues"
  },
  "homepage": "https://github.com/S-Flex/xfw-local#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "@electron-forge/publisher-github": "^6.4.2",
    "electron": "^26.1.0",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2"
  }
}
